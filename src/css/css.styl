@import "mixins.styl"
@import "colors.styl"

HTML
  width 100%
  height 100%

BODY
  default-font-family()
  /*bg-linear-gr(light-grey-green-color, grey-green-color)*/


.card-content
  display flex
  flex-direction column
.list
  text-align left
.divider
  height 0
  margin .5rem 0
  overflow hidden
  border-top 1px solid #e9ecef

.sticky-block
  position sticky
  top 64px
  background #fff
  z-index 1

.logo-company
  max-width 120px
  margin-right 30px
  margin-left 30px
  opacity 1

.plan-name
  flex-basis 0
  flex-grow 1

.checkbox-img
  display flex
  justify-content center
  img
    width 20px

.pricing-plans

  .pricing-content
    min-height 50px

  .pricing-icon
    width 27px
    margin-right 15px