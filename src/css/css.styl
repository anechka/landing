@import "mixins.styl"
@import "colors.styl"

HTML
  width 100%
  height 100%

BODY
  default-font-family()
  /*bg-linear-gr(light-grey-green-color, grey-green-color)*/
  background #fff
  font-size 14px
  line-height 20px
  margin 0
  min-height 100%
  /*background-color: #fff;*/
  color #333

.bs-tooltip-right
  margin-left 10px

.tooltip.show
  opacity 1

.tooltip-inner
  max-width 260px
  padding 10px
  background-color #d5d5d5
  color #595959
  font-size 11.5px
  text-align left

.tooltip.bs-tooltip-auto[x-placement^=left] .arrow::before, .tooltip.bs-tooltip-top .arrow::before
  border-top-color #d5d5d5

.padding-top-30
  padding-top 30px

.padding-bottom-30
  padding-bottom 30px

.padding-bottom-60
  padding-bottom 60px

.padding-left-60
  padding-left 60px


.hide
  opacity 0

.vertical-divider
  border-right 1px solid #c6c6ca

.section-subtitle
  margin-bottom 24px
  margin-top 20px
  font-size 30px
  line-height 40px
  font-weight 700
  text-align center

.divider
  height 0
  width 100%
  margin .5rem 0
  overflow hidden
  border-top 1px solid #f3f4fa

.sticky-block
  position sticky
  top 60px
  background #fffffff2
  z-index 1


.btn-lg
  min-width 160px

.button-medium
  width 180px

.button-default
  display flex
  position relative
  overflow hidden
  padding-right 24px
  padding-left 24px
  padding-top 0
  padding-bottom 0
  -webkit-justify-content: center
  justify-content center
  -webkit-align-items center
  -ms-flex-align center
  align-items center
  border-radius: 4px
  color: #fff
  font-size 14px
  line-height 43px
  font-weight 700
  text-transform uppercase
  background-color #4949e4
  border none
  text-decoration none
  &:hover
    color #fff
    text-decoration none


.btn-small
  display flex
  -webkit-justify-content: center
  justify-content center
  -webkit-align-items center
  -ms-flex-align center
  align-items center
  position relative
  overflow hidden
  font-size 12px
  font-weight 700
  max-width 100%
  width 100%
  padding-bottom 3px
  padding-left 13px
  padding-right 13px
  padding-top 3px
  background-color rgb(255, 255, 255)
  border 1px solid rgb(0, 13, 71)
  border-radius 4px
  color: rgb(0, 13, 71)
  &:hover
    text-decoration none
    color #000d47
  @media(max-width: 768px)
    visibility hidden


.btn-dark-blue
  background-color #fff
  color #000d47
  border 1px solid rgb(0, 13, 71)
  &:hover
    background #000d47
    color #fff

/* HEADER NAVIGATION */

.header-nav
  padding 10px 55px
  border-style none none solid
  border-width 1px 1px .5px
  border-color #b8b7bd #b8b7bd rgba(184,183,189,.5)

.navbar-expand-lg .navbar-nav .nav-link
  padding 10px 14px
  @media(max-width: 768px)
    padding-left 0
    padding-right 0
  &.link-without-dropdown
    &:hover
      color #4442cb
    &:focus
      color #4442cb

.header-dropdown
  top 35px
  margin-right -10px
  margin-left -10px
  border none
  border-radius 0
  box-shadow 0 5px 14px -5px rgba(0,0,0, .26)

#menu-1
  min-width 24rem
  .left-col-content
    a:nth-child(2)
      padding-left 38px
    a:nth-child(3)
      padding-left 38px

.header-nav-link
  color: rgb(103, 102, 113)
  font-size 15px
  line-height 18px
  padding 10px 24px

  &::after
    display none
    @media(max-width 768px)
      display: inline-block
      margin-left .255em
      vertical-align .255em
      content: ""
      border-top .3em solid
      border-right .3em solid transparent
      border-bottom 0
      border-left .3em solid transparent

  &:hover
    color #4442cb
    background-color transparent

.dropdown-item-title
  font-size 13px
  line-height 20px
  color #8e8e96;
  text-transform uppercase
  &:hover
    background-color transparent
    color #8e8e96;

/* HEADER NAVIGATION END */

.hero
  background #000d47
  color #fff
  display block
  padding-top 180px
  height 650px

.hero-title
  font-size 42px
  line-height 52px
  font-weight 300

.hero-subtitle
  color rgb(255, 255, 255)
  font-size 16px
  font-weight 400
  line-height 27px
  margin-bottom 16px
  margin-top 10px
  opacity 0.55
  list-style disc
  list-style-position inside

  li:nth-of-type(1)
    list-style  none
  li
    padding-right 10px

/* CARDS */

.cards-container
  display block
  position relative
  margin-top -300px
  padding-left 30px
  padding-right 30px
  .cards-menu-tabs
    text-align center
    padding-bottom 60px
    a
      margin-right 30px
      color #fff
      font-size 16px
      line-height 19px
      &:hover
        text-decoration none
  .link-decorated
    border-bottom 2px solid #fff
    padding-bottom 5px

  .default-card
    min-height 650px
    border-radius 5px
    border 1px solid transparent
    background-color #fff
    box-shadow 0 2px 11px 0 rgba(0,0,0,.09)
    text-align center


  .card-standard
    position relative
    min-height 680px
    margin-right -5px
    margin-left -5px
    margin-top -20px
    z-index 1
    padding-top 20px
    @media(max-width 992px)
      margin-top 20px
      margin-bottom 20px

  .card-content
    display flex
    flex-direction column
    align-items center
    .default-card-title
      font-size 18px
      font-weight 700
      margin-top 10px
      margin-bottom 10px
      color #000d47
      text-transform uppercase
    .default-card-text
      margin-top 10px
      margin-bottom 20px
      color #000d47

    .pricing-text-small
      color #676671
      font-size 13px
      line-height 20px
      padding-top 5px
      padding-bottom 5px

    .card-price
      display flex
      justify-content center
      align-items center
      margin-top 5px

      .dollar
        margin-right 2.5px
        color #000d47
        font-size 24px
        line-height 30px
        font-weight 400

      .price
        color #000d47
        font-size 45px
        line-height 40px
        font-weight 700

      .contact-us
        font-size 32px

    .card-btn
      min-width 70%

    .card-link-container
      padding-top 20px
      padding-bottom 10px
      line-height 24px
      font-size 16px
      font-weight 700
      a
        color: #4949e4
        text-decoration none
    .card-list
      text-align left
      padding-left 0
      width 100%
      list-style none
      li
        display flex
        align-items center
        margin-top 10px
        span:not(:first-child)
          border-bottom: 1px dashed #b8b7bd
        span
          cursor help
      .card-list-icon-check
        width 15px
        margin-right 8px

/* CARDS END */

/* SECTION COMPANY LOGOS */
.section-company-logos
  padding-top 150px
  padding-bottom 130px

  .logo-company-container
    margin-top 20px
    margin-bottom 80px
    align-items center
    justify-content center

  .logo-company
    max-width 120px
    margin-right 30px
    margin-left 30px
    opacity 1
/* SECTION COMPANY LOGOS END */


/* SECTION PRICING PLANS */

.pricing-plans-section

  .grid-table
    display grid
    grid-template-rows repeat(34, 1fr)
    grid-template-columns 3fr 1fr 1fr 1fr
    row-gap 10px
    column-gap 20px
    div
      min-height 40px
      display flex
      align-items center
      a:not(.btn-small)
        color rgb(66, 66, 78)
        font-size 15px
        line-height 20px
        &:hover
          text-decoration none
          color rgb(73, 73, 228)

  .pricing-icon
    width 27px
    margin-right 15px

  .pricing-title
    color rgb(0, 13, 71)
    font-size 22px
    line-height 20px


  .plan-name
    color #000d47
    line-height 18px
    letter-spacing 1px
    text-transform uppercase

  .checkbox-img
    display flex
    justify-content center
    align-items center
    img
      width 20px


/* SECTION PRICING PLANS END */

/* SECTION FAQ*/


.faqsection
  padding 100px 0 80px 0
  background #fbfaff

  .arrow-icon
    /*transform translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg)
    transform-style preserve-3d*/
    height 17px
    width 32px

  .faq-link-subtitle
    color rgb(0, 13, 71)
    cursor pointer
    font-size 20px
    line-height 20px
    &:hover
      text-decoration none
      color #4949e4

  .card-collapse-body
    background-color #fbfaff
    padding 40px 0 20px 0
    border none
    color rgb(66, 66, 78)
    font-size 16px
    font-weight 400
    line-height 27px

/* SECTION FAQ END */


.get-started-section
  padding 100px 30px
  .get-started-subtitle
    color rgb(51, 51, 51)
    font-size 30px
    font-weight 700
    line-height 40px
    margin-bottom 10px
    margin-top 30px

  .get-started-text
    color rgb(66, 66, 78)
    font-size 16px
    font-weight 400
    line-height 27px
    margin-bottom 30px
/* FOOTER */

.footer
  padding 50px 55px
  background #000d47
  color #fff

  .footer-grid
    display grid
    grid-template-rows 1fr
    grid-template-columns 1fr 1fr 1fr 1fr 1fr 0.6fr
    row-gap 10px
    column-gap 20px
    div
      display flex
      a
        color rgb(255, 255, 255)
        font-size 16px
        font-weight 300
        letter-spacing 1px
        line-height 20px
        margin-bottom 15px
        &:hover
          text-decoration none
          color rgb(96, 120, 255);

  .footer-logo
    width 40px

  .footer-social-icons
    display flex
    justify-content space-between

    .footer-social-icon
      width 25px
      height 25px
      opacity .6
      -webkit-transition-property opacity
      transition-property opacity
      @media(max-width 992px)
        margin-right 3px

  .footer-divider
    border-top 1px solid hsla(0,0%,100%,.13)
    margin-bottom 30px

  .footer-subtitle
    color rgb(142, 142, 150)
    font-size 14px
    font-weight 700
    line-height 20px
    margin-bottom 30px

  .copyright
    color #fff
    font-size 12px
    font-weight 400
    line-height 18px

  .terms-service
    padding-top 5px
    .terms-link
      opacity .35
      color #fff
      font-size 12px
      &:hover
        opacity 1
        color #ff5a60
        text-decoration none

    .dot-terms
      width 2px
      height 2px
      margin-right 10px
      margin-left 10px
      background-color #4949e4
      display inline-block
      vertical-align: middle

/* FOOTER END */

